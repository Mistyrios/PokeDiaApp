<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:pokediaapp="clr-namespace:PokeDiaApp"
       x:Class="PokeDiaApp.MainPage"
       NavBarIsVisible="False"
       BackgroundColor="#c73648">
    
    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.TitleColor" Value="#e7e7e6" />
                <Setter Property="Shell.UnselectedColor" Value="#404040" />
            </Style>
            <Style TargetType="TabBar"  BasedOn="{StaticResource BaseStyle}" />
        </ResourceDictionary>
    </Shell.Resources>

    <TabBar>
        <ShellContent Title="Acceuil"
            Icon="Home_Icon.png">
            <pokediaapp:HomePage/>
        </ShellContent>
        <ShellContent Title="Pokédex"
            Icon="Pokedex_Icon.png">
            <pokediaapp:PokedexPage />
        </ShellContent>
        <ShellContent Title="Ajouter"
            Icon="PLus_Icon.png">
            <pokediaapp:AddPage />
        </ShellContent>
        <ShellContent Title="Equipes"
            Icon="PokeBall_Icon.png">
            <pokediaapp:TeamPage />
        </ShellContent>
    </TabBar>
</Shell>
