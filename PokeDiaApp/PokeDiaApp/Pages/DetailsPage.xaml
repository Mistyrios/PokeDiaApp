<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeDiaApp.DetailsPage"
             x:Name="container">

    <ContentPage.Content ItemSource="{Binding pokemonDeTest}">
        <StackLayout BackgroundColor="#6a6b6a">
            <Frame
                HorizontalOptions="CenterAndExpand"
                BackgroundColor="#c73648"   
                CornerRadius="15"
                Padding="80,0,80,0"
                Margin="0,10,0,0"
                >
                <Label Text="PokeDia"
                TextColor="#e7e6e7"
                   FontSize="50"/>
            </Frame>
            <Frame>
                <StackLayout><Label Text="{Binding Name}"
                VerticalOptions="CenterAndExpand" 
                TextColor="#e7e6e7"
                HorizontalOptions="CenterAndExpand" />
                    <StackLayout>
                        
                    </StackLayout>
                </StackLayout>
            </Frame>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>